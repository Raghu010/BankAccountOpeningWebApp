@model IEnumerable<BankAccountOpening.Models.UserDetails>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="13" class="text-center">Bank Account Opening Form List Today - @DateTime.Now.ToString("dd/MM/yyyy")</th>
        </tr>
        <tr>
            <th>Date Time</th>
            <th>Form No</th>
            <th>Title</th>
            <th>First name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Sex</th>
            <th>Age</th>
            <th>Mobile No.</th>
            <th>Email id</th>
            <th>Branch</th>
            <th>Type of account</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.CreatedDate</td>
                <td>@account.FormNo</td>
                <td>@account.title</td>
                <td>@account.FirstName</td>
                <td>@account.MiddleName</td>
                <td>@account.LastName</td>
                <td>@account.Sex</td>
                <td>@account.Age</td>
                <td>@account.MobileNo</td>
                <td>@account.EmailId</td>
                <td>@account.BranchName</td>
                <td>@account.TypeOfAccount</td>
            </tr>
        }
        <tr>
            <td colspan="13" class="text-center">
                <a asp-action="Create" asp-controller="home" class="btn btn-primary mx-2">New</a>
                <a asp-action="Quit" asp-controller="home" class="btn btn-danger mx-2">Quit</a>
            </td>
        </tr>
    </tbody>
</table>