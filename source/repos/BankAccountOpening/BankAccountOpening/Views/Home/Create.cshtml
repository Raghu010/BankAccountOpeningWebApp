@model BankAccountOpening.Models.UserDetails

<form asp-action="Create" method="post">
    <table class="table table-bordered w-100">
        <tr>
            <td colspan="6" class="text-center">
                <h3>
                    Bank Account Opening Form
                </h3>
            </td>
        </tr>

        <tr>
            <td colspan="6" class="text-center">
                <strong>Form Number:</strong> @Model.FormNo &nbsp;&nbsp;
                <strong>Date:</strong> @DateTime.Now.ToString("dd/MM/yyyy") &nbsp;&nbsp;
                <strong>Time:</strong> @DateTime.Now.ToString("HH:mm:ss")
            </td>
        </tr>

        <tr>
            <td colspan="6">
                <div class="row">
                    <div class="col-md-2">
                        <label>Title:</label>
                        <select asp-for="title" class="form-control" asp-items="Html.GetEnumSelectList<Title>()"></select>
                    </div>

                    <div class="col-md-2">
                        <label>First Name:</label>
                        <input asp-for="FirstName" class="form-control"/>
                    </div>

                    <div class="col-md-2">
                        <label>Middle Name:</label>
                        <input asp-for="MiddleName" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label>Gender:</label>
                        <select asp-for="Sex" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                    </div>

                    <div class="col-md-2">
                        <label>Date of Birth:</label>
                        <input asp-for="DateOfBirth" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label>Age:</label>
                        <input asp-for="Age" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label>STD Code:</label>
                        <input asp-for="StdCode" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label>Telephone:</label>
                        <input asp-for="Telephone" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label>Mobile Number:</label>
                        <input asp-for="MobileNo" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label>email id:</label>
                        <input asp-for="EmailId" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="State" class="control-label">State</label>
                        <select asp-for="State" asp-items="ViewBag.States" class="form-control">
                            <option value="">-- Select State --</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>


                </div>
            </td>
        </tr>
    </table>
</form>
